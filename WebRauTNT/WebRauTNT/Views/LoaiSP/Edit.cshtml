@model WebRauTNT.Models.LoaiSP
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h2 style=" margin-top:20px;">Chỉnh sửa</h2>

            @using (Html.BeginForm())
            {
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Loại sản phẩm</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.MaLoai)

                    <div class="form-group">
                        <strong class="control-label col-md-2">Tên loại</strong>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.TenLoai, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu" class="btn btn-info" /> |
                        <a class="btn btn-info" href='@Url.Action("Index", "LoaiSP")' style="margin:10px 0px;">
                            Trở về
                        </a>
                    </div>


                </div>            }
        </div>
    </main>
</div>
